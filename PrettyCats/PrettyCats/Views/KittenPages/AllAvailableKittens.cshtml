@model List<PrettyCats.Database.Pets>
@{
	ViewBag.Title = "AllAvailableKittens";
	Layout = "~/Views/Layouts/_MainLayout.cshtml";
}

<h2 style="text-align: center; color:white;"> Все доступные на данный момент котята</h2>


<hr>
<div class="images-center-container">
		@{
			if (Model != null)
			{
				int countAll = Model.Count;
				int rowCounter = (countAll + 2)/3;
				int curr = 0;


				for (int i = 1; i <= rowCounter; i++)
				{
					<div class="row">
						@for (int j = 1; j <= 3; j++)
						{
							++curr;

							if (curr <= countAll)
							{
								@Html.Partial("~/Views/KittenPages/GetKittenHtml.cshtml", Model[curr - 1])
							}
						}
					</div>
				}
			}
		}
</div>

