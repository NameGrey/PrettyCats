@model List<PrettyCats.DAL.Pets>
@{
	ViewBag.Title = "Наши кошки";
	Layout = "~/Views/Layouts/_MainLayout.cshtml";
}

<h2 style="text-align: center; color:white;"> Наши кошки</h2>

<div class="container">
	@Html.Partial("~/Views/KittenPages/_BackLink.cshtml", new[] { "Index", "Home" })
	@{
		if (Model != null)
		{
			int countAll = Model.Count();
			int rowCounter = (countAll + 2) / 3;
			int curr = 0;


			for (int i = 1; i <= rowCounter; i++)
			{
				<div class="row">
					@for (int j = 1; j <= 3; j++)
					{
						++curr;

						if (curr <= countAll)
						{
							@Html.Partial("~/Views/KittenPages/KittenOnTheMainPageHtml.cshtml", Model[curr - 1])
						}
					}
				</div>
			}
		}
	}
	@Html.Partial("~/Views/KittenPages/_BackLink.cshtml", new[] { "Index", "Home" })
</div>
