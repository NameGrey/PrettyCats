@using PrettyCats.Database
@model PrettyCats.Database.Pets

@{
	Pictures pict = null;
	string path = String.Empty;
	string status = String.Empty;

	if (Model.PictureID != null)
	{
		pict = DbStorage.Pictures.Find(i=> i.ID == Model.PictureID);
		path = Url.Content(pict.Image);
	}

	string link = "/kitten-page/";
	string actionName = "kitten-page";

	if (Model.IsParent)
	{
		link = "/parent-kitten-page/";
		actionName = "parent-kitten-page";
	}
	else
	{
		status = "Статус: " + Model.Status;
	}

	link += Model.ID;
	
}

<script></script>

<form action="@link">
	<div class="col-sm-4">
		<a href="@link">
			<img class="img-circle img-responsive img-center" style="margin-bottom: 24px;" src="@path" alt="">
		</a>
		<h2 style="margin-top: -5px; margin-bottom: 0px; float: left; margin-right: 5px;">@Model.RussianName</h2>

		<input type="submit" class="btn-primary" value="Посмотреть" />
		<input type="hidden" name="id" value="@Model.ID" />
		<span class="under-name-status" style="clear: both;"> @status</span>
	</div>
</form>
