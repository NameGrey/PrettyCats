@model List<PrettyCats.Models.KittenShortModelView>

@{
	Layout = "~/Views/Layouts/_MainLayout.cshtml";
}
<div class="container">
	@if (ViewBag.PreviousPage == "Archive")
	{
		@Html.Partial("~/Views/KittenPages/_BackLink.cshtml", new[] { "Archive", "KittenPages" })
	}
	else
	{
		@Html.Partial("~/Views/KittenPages/_BackLink.cshtml", new[] { "Index", "Home" })
	}

	@{
		if (Model != null)
		{
			int countAll = Model.Count();
			int rowCounter = (countAll + 2) / 3;
			int curr = 0;

			if (rowCounter == 0)
			{
				<div class="miss-kittens">На данный момент свободных котят нет. Вы можете посмотреть уже проданных в этом году котят в <b>@Html.ActionLink("Архиве", "Archive_old")</b></div>
			}
			else
			{

				for (int i = 1; i <= rowCounter; i++)
				{
					<div class="row">
						@for (int j = 1; j <= 3; j++)
						{
							++curr;

							if (curr <= countAll)
							{
								@Html.Partial("~/Views/KittenPages/KittenOnTheMainPageHtml.cshtml", Model[curr - 1])
							}
						}
					</div>
				}
			}
		}
	}
</div>