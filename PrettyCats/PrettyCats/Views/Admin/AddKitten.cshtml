@using PrettyCats.Database
@model PrettyCats.Database.Pets

@{
	ViewBag.Title = "AddKitten";
	Layout = "~/Views/Layouts/_AdminPanelLayout.cshtml";
}

<script type="text/javascript">
	$(document).ready(function () {
		$('#BirthDate').datepicker({
			dateFormat: "dd/mm/yy",
			showStatus: true,
			showWeeks: true,
			currentText: 'Now',
			autoSize: true,
			gotoCurrent: true,
			showAnim: 'blind',
			highlightWeek: true
		});
	});
</script>

<h2>AddKitten</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>KittenModelView</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.Label("Имя на английском", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Имя на русском", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.RussianName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.RussianName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Порода", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(x => x.BreedID, new SelectList(DbStorage.Instance.PetBreeds, "ID", "Name"))
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Владелец", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(x => x.OwnerID, new SelectList(DbStorage.Instance.Owners, "ID", "Name"))
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Отображение", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(x => x.WhereDisplay, new SelectList(DbStorage.Instance.DisplayPlaces, "ID", "PlaceOfDisplaying"))
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Дата рождения", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(x => x.BirthDate, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>

		<div class="form-group">
			@Html.Label("Текст", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(x => x.UnderThePictureText, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>
		
		<div class="form-group">
			<input style="margin-left: 15px;" type="file" name="files" multiple />
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Создать" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Вернуться", "AdminChangeKittens", "Admin")
</div>
