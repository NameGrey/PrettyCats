@model PrettyCats.Models.ArticleModelView

<div class="row top-buffer">
	<div class="col-xs-4 col-sm-3 col-lg-3 col-xs-offset-1">
		<img class="img-rounded" src="@Model.ImageUrl" />
	</div>
	<div class="col-xs-6">
		<div class="row">
			<div class="col-xs-12">
				<p><b>@Model.ArticleName</b></p>
				<p>@Model.MainArticleText</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<a href="@Model.ArticleUrl"><button class="pull-left article-button">Читать дальше...</button></a>
			</div>
		</div>
	</div>
</div>
