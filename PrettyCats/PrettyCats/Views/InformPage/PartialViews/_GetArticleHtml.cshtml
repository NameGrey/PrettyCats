@model PrettyCats.Models.ArticleModelView

<div class="row top-buffer">
	<div class="col-xs-5 col-sm-4 col-lg-3 col-xs-offset-1">
		<a href="@Model.ArticleUrl">
			<img class="img-rounded" src="@Model.ImageUrl" />
		</a>
	</div>
	<form action="@Model.ArticleUrl">
		<div class="col-xs-6 col-sm-7 col-md-7 col-lg-8">
			<div class="row">
				<div class="col-xs-12">
					<p><b>@Model.ArticleName</b></p>
					<p class="page-text" style="margin-left:-10px;margin-top:-10px;">@Model.MainArticleText</p>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<a href="@Model.ArticleUrl"></a><input type="submit" class="pull-left article-button" value="Читать дальше..." />
				</div>
			</div>
		</div>
	</form>
</div>
